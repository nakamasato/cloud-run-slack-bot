# Example terraform.tfvars file for multi-project setup
# Copy this file to terraform.tfvars and update with your values

# Host project where the bot will be deployed
host_project_id = "my-host-project"

# Projects to monitor
monitored_projects = [
  {
    project_id      = "my-project-1"
    region          = "us-central1"
    default_channel = "project1-alerts"
    service_channels = {
      "web-service" = "web-team"
      "api-service" = "api-team"
    }
  },
  {
    project_id      = "my-project-2"
    region          = "us-east1"
    default_channel = "project2-alerts"
    service_channels = {
      "batch-service" = "batch-team"
    }
  },
  {
    project_id      = "my-project-3"
    region          = "europe-west1"
    default_channel = "project3-alerts"
    service_channels = {
      "frontend"     = "frontend-team"
      "backend-api"  = "backend-team"
      "worker-jobs"  = "worker-team"
    }
  }
]

# Slack configuration
slack_bot_token      = "xoxb-your-bot-token-here"
slack_signing_secret = "your-signing-secret-here"
slack_app_token      = "xapp-your-app-token-here"  # Optional, for socket mode
slack_app_mode       = "http"  # or "socket"
default_channel      = "general"  # Fallback channel

# Service configuration
service_account_name     = "cloud-run-slack-bot"
cloud_run_service_name   = "cloud-run-slack-bot"
container_image          = "gcr.io/PROJECT_ID/cloud-run-slack-bot:latest"  # PROJECT_ID will be replaced
